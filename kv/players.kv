<PlayerEdit>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "280dp"
    
    BoxLayout:
        size_hint: (1,0.1)
        orientation: "horizontal"

        MDTextField:
            id: tfPlayerName
            hint_text: "Name"
            max_text_length: 50
            pos_hint: {"center_x": 1, "center_y": .9}
            
        MDIconButton:
            icon: "delete"
            pos_hint: {"center_x": 1, "center_y": .9}
            on_release: app.p.delete_player()
            
            
    GridLayout:
        id: colorsgrid
        cols: 4
        rows: 5
        #Red
        MDIconButton:
            id: red
            icon: "checkbox-blank-circle"
            theme_icon_color: "Custom"
            icon_color: 244/255,67/255,54/255,1
            size_hint: (0.25, 0.2)
            on_release:
                app.p.reset_color_selection(button = self);
                #red.icon = "checkbox-marked-circle";
                #app.p.selected_player_color = self.icon_color
        #Pink
        MDIconButton:
            id: pink
            icon: "checkbox-blank-circle"
            theme_icon_color: "Custom"
